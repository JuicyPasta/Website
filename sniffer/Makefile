CP = gcc
CFLAGS = -lpcap

sniffer.o: sniffer.c
	$(CP) $(CFLAGS) -c sniffer.c

sniffer.c: packets.h
	touch sniffer.c

# Utility dependencies 
clean: 
	rm *.o

push: 
	scp *.c Makefile cp://home/jldarrow/Documents/CPE357/MyLZW/
	scp *.h Makefile cp://home/jldarrow/Documents/CPE357/MyLZW/

# Pattern-based dependencies
%.o: %.c
	$(CP) $(CPPFLAGS) -c $< -o $@

%.c: %.h
	touch $@

%.h:
	touch $@
	# Autogenerated Dependencies

